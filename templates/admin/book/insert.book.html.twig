
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet"  href="{{ asset('css/exo_style.css') }}"  />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
<header >
    <div id="menu">
        <img src="/img/logo.png"   />
        <div>
            <ul >
                <li><a href="{{ path('admin_accueil') }}">ACCUEIL</a></li>
                <li>LIVRES</li>
                <li>DIVERS</li>
            </ul>
            <div>
                <form action="{{ path('admin_book_search') }} " method="get">
                    <label for="word"></label>
                    <input type="text" name="word" placeholder="Rechercher sur le site…">
                    <button>Rechercher</button>

                </form>
            </div>
        </div>
    </div>
</header>

<main>

    {#je met mon message flash#}
    {% for message in app.flashes('success') %}
        <div class="message_flash">
            {{ message }}
        </div>
    {% endfor %}
    {#methode bootstrap #}
    <div class="form">
        {{ form_start(formBook,{'attr': {'class': 'bg-light'}}) }}

        {{ form_row(formBook.bookCover) }}

        {{ form_label(formBook.title) }}
        {{ form_widget(formBook.title,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(formBook.title) }}

        {{ form_label(formBook.resume) }}
        {{ form_widget(formBook.resume,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(formBook.resume) }}

        {{ form_label(formBook.nbPages) }}
        {{ form_widget(formBook.nbPages,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(formBook.nbPages) }}

        {{ form_label(formBook.author) }}
        {{ form_widget(formBook.author,{'attr': {'class': 'form-control'}}) }}
        {{ form_errors(formBook.author) }}

        {{ form_widget(formBook.submit,{'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_end(formBook) }}
    </div>
    {# j'affiche tous les messages flashs enregistrés #}






</main>
<footer>
    <div id="menu">
        <img src="/img/logo.png"   />
        <div>
            <ul >
                <li>Lien 1</li>
                <li>Lien 2</li>
                <li>Lien 3</li>
            </ul>
        </div>

    </div>
</footer>
</body>
</html>

