<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">


    <title>Accueil Livres</title>


    <link rel="stylesheet"  href="{{ asset('css/exo_style.css') }}"  />
<body>
    <header >
        <div id="menu">
            <img src="/img/logo.png"   />
            <div>
                <ul >
                    <li><a href="{{ path('home') }}">ACCUEIL</a></li>
                    <li>LIVRES</li>
                    <li>DIVERS</li>
                </ul>

            <div>
                <form action="{{ path('book_search') }}" method="get">
                    <label for="word"></label>
                    <input type="text" name="word" placeholder="Rechercher sur le site…">
                    <button>Rechercher</button>

                </form>

            </div>

        </div>
    </header>
<main>


    {% for key, book in books %}
    <section>

    <div >
        <div id="livre"><img src="/img/200.webp"  /></div>
    </div>


        <div >

           <div id="contenu">
                <p class="titre"><a href="{{ path('book', { 'id': book.id }) }}">{{ book.title }}</a> </p>
                <p>Auteur : {{ book.author.firstName }} {{ book.author.name }}</p>
                <p>Résumé : {{ book.resume }}</p>
           </div>
        </div>

    </section>
    {% endfor %}

</main>
    <footer>
        <div id="menu">
            <img src="/img/logo.png"   />
            <div>
                <ul >
                    <li>Lien 1</li>
                    <li>Lien 2</li>
                    <li>Lien 3</li>
                </ul>
            </div>

        </div>
    </footer>
</body>
</html>