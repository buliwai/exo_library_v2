<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Accueil Auteurs</title>

    <link rel="stylesheet"  href="{{ asset('css/exo_style.css') }}"  />
<body>
    <header >
        <div id="menu">
            <img src="/img/logo.png"   />
            <div>
                <ul >
                    <li><a href="{{ path('home') }}">ACCUEIL</a></li>
                    <li>LIVRES</li>
                    <li>DIVERS</li>
                </ul>
            <div>
                <form action="{{ path('author_search') }} " method="get">
                    <label for="word"></label>
                    <input type="text" name="word" placeholder="Rechercher sur le site…">
                    <button>Rechercher</button>

                </form>
            </div>
        </div>
        </div>
    </header>
<main>





    {% for key, author in authors %}
    <section>
    <div >
        <div id="livre">
            <img src="/img/200.webp"  /></div>
    </div>
        <div >

    <div id="contenu">
        <p class="titre"><a href="{{ path('author', { 'id': author.id }) }}">{{ author.name }} {{ author.firstName }}</a> </p>
        <p>Date de naissance : {{ author.birthDate|date('Y-m-d') }}</p>
        <p>Date de décès : {{ author.deathDate|date('Y-m-d') }}</p>
        <p>Biographie : {{ author.biography }}</p>
    </div>




        </div>
        <p>Livres : </p>
        {% for book in author.books %}
            <p>{{ book.title }}</p>
        {% endfor %}

    </section>
    {% endfor %}

</main>
    <footer>
        <div id="menu">
            <img src="/img/logo.png"   />
            <div>
                <ul >
                    <li>Lien 1</li>
                    <li>Lien 2</li>
                    <li>Lien 3</li>
                </ul>
            </div>

        </div>
    </footer>
</body>
</html>